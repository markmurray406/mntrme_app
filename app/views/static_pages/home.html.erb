<% if signed_in? %>
  <div class="row">
    <aside class="span2">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/occupation_form' %>
        <%#= render 'shared/skill_form' %>
      </section>
    </aside>
  </div>

  <%# See Listing 10.41 %>
  <div class="span4">
    <h3>Occupation Feed</h3>
      <%= render 'shared/feed' %>
    </div>
