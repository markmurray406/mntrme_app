<%#= See Listing 10.28 %>
<% if signed_in? %>
  <div class="row">
        <%= render 'shared/user_info' %>

  <%# See Listing 10.41 %>
  <div class="col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
    <section id="main-bar">
    <section>
        <h3>Add an Occupation</h3>
        <%= render 'shared/occupation_form' %> 
        <%#= render 'shared/skill_form' %>
    </section>
    <h3>Occupation Feed</h3>
      <%= render 'shared/feed' %>
    </section>
    </div>
  </div>

<% else %>

    <!-- Header -->     
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-heading">Welcome To Dialog!</div>
                <div class="intro-lead-in">Making mentoring easier.</div>
                <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
            </div>
         </div>   
    </header>

    <!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Our Vision.</h2>
                    <h3 class="section-subheading text-muted">This is what we want to acheive.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        <li>
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="img/about/1.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="subheading">About Us.</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">Dialog is a platform to help companies communicate the skills they need. We want students and graduates to access knowledge and skills that companies require whilst they are studying and before a job is made available.</p>
                                </div>
                            </div>
                        </li>
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="img/about/2.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="subheading">For Graduates</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">We want to help end youth unemployment. Our long-term aim is to help graduates get a relevant job they enjoy within 3 months of graduating.</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="img/about/3.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="subheading">For Companies</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">We want you to succeed. We beleive that talented staff are the key to consistently delivering excellent products and services that help grow your business and build profits.</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Join Us.</h2>
                    <h3 class="section-subheading text-muted">Tell us your about you latest job hunt. Lets us help you.</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- jQuery Version 1.11.0 -->
    <script src="js/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

<% end %>
