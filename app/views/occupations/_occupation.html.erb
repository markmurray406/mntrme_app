<li>
	<span class="content">  Occupation id: <%= occupation.id %></span>
  <%#=  <span class="content"><%= occupation.content %> <%#=  </span> %>

  <span class="content">
    <%= link_to occupation.content, occupation %>
  </span>

   <%#=  Add an occupation  </span> %>
  <span class="content">
    <%= link_to "I want this job!", friendships_path(:friend_id => occupation), :method => :post %>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(occupation.created_at) %> ago.
  </span>

  <span class="content">
    Started by:<%= link_to occupation.user.name, occupation.user %>
  </span>

 	<%#= See Listing 10.43 %> 
  <% if current_user?(occupation.user) %>
    <%= link_to "delete", occupation, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: occupation.content %>
  <% end %>

</li>