<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content">  Occupation id: <%= feed_item.id %></span>
  <%#  <span class="content"><%= feed_item.content %><%# </span>%>

  <%# See http://stackoverflow.com/questions/16386554/rails-links-with-model-object-path. This links to the occupation %>
  <span class="content">
    <%= link_to feed_item.content, feed_item %>
  </span>

  <%#=  Add an occupation 26-Jult-2014 </span> %>
  <span class="content">
    <%= link_to "I want this job!", friendships_path(:friend_id => feed_item), :method => :post %>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>

  <%# Experiment, seeing if skills form appears in occupation feed. This does work but difficult to get occupation id %>
  <%#<%= render 'shared/skill_form' %>

	<%# See Listing 10.44 %>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>