<%# See Listing 10.40 %>
<li id="<%= skillfeed_item.id %>">
  <%= link_to gravatar_for(skillfeed_item.user), skillfeed_item.user %>
  <span class="user">
    <%= link_to skillfeed_item.user.name, skillfeed_item.user %>
  </span>
  <span class="content"><%= skillfeed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(skillfeed_item.created_at) %> ago.
  </span>

  <%#= See Listing 10.44 %>
  <% if current_user?(skillfeed_item.user) %>
    <%= link_to "delete", skillfeed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: skillfeed_item.content %>
  <% end %>
</li>